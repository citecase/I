name: Latest Blog Post Workflow
on:
  schedule:
    - cron: '0 * * * *' # Runs every hour
  workflow_dispatch: 

jobs:
  update-readme-with-blog:
    - name: Pull in blog posts
        uses: gautamkrishnar/blog-post-workflow@v1
        with:
          feed_list: "https://www.livelaw.in/category/sc-judgments/google_feeds.xml"
          readme_path: "./list.md"
          max_post_count: 5
          template: '- [$title]($url)'
          # Add this line to keep old posts in the list:
          enable_item_deletion: false

